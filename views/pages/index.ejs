<h1>Upcoming Events</h1>

<% if (events.length > 0) { %>
    <ul class="events-list">
        <% events.forEach(event => { %>
            <li>
                <h2><%= event.name %></h2>
                <p>Date: <%= event.date %></p>
                <p><%= event.description %></p>
                <a href="/register?eventId=<%= event.id %>" class="btn">Register</a>
            </li>
        <% }) %>
    </ul>
<% } else { %>
    <p>No upcoming events at this time.</p>
<% } %>